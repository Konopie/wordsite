<div class="row">
    <h1 id="welcome">Welcome to WordSite {{username}}</h1>
    <p id="user-name"></p>
    <p>We let you post words.</p>
</div>

<div id="search-constainer">
  <h3>Search For User Posts:</h3>
  <p>Search</p>
  <input id="search-bar"></input></br>
  <button id="search-btn">Submit</button>
  <button id="all-posts-btn">View All Posts</button>
</div>

<div class="post-list">
  {{#each posts as |post|}}
  <div class="card">
    {{> post-info post}}
  </div>
  {{/each}}
</div>

{{#if loggedIn}}
  <script src="/assets/js/index.js"></script>
{{/if}}
