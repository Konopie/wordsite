<article class="post">
    <div class="post_text">
        {{post_text}}
    </div>
    <div class="url">
        <a href="{{post_url}}" target="_blank"><span>({{format_url post_url}})</span></a>
    </div>
    <div class="user-info">
        User - {{user.username}}</br>
        {{comments.length}}<span> </span><a href="/post/{{id}}">{{format_plural 'comment' comments.length}}</a>
    </div>
</article>